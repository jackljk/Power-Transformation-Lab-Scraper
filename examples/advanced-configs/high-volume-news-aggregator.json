{
    "profile_name": "High-Volume News Aggregator",
    "description": "High-performance configuration for scraping multiple news sources simultaneously with load balancing and distributed processing",
    "scraper_type": "bright_data",
    "target_urls": [
        "https://www.reuters.com/world/",
        "https://www.bbc.com/news",
        "https://www.cnn.com/world",
        "https://www.bloomberg.com/news",
        "https://www.wsj.com"
    ],
    "task_prompt": "Aggregate breaking news, financial news, and world events from multiple sources. Categorize articles, detect duplicates, and rank by importance.",
    "output_format": {
        "aggregated_news": [
            {
                "headline": "Article headline",
                "source": "News source",
                "category": "News category",
                "importance_score": "Calculated importance (1-10)",
                "publication_time": "Publication timestamp",
                "summary": "Article summary",
                "url": "Original article URL",
                "duplicate_check": "Duplicate detection result",
                "sentiment": "Article sentiment analysis",
                "entities": ["Extracted entities (people, places, organizations)"],
                "topics": ["Main topics/tags"]
            }
        ],
        "trending_topics": [
            {
                "topic": "Trending topic",
                "mention_count": "Number of mentions across sources",
                "trend_direction": "trending_up|trending_down|stable"
            }
        ],
        "source_analysis": [
            {
                "source": "News source name",
                "articles_collected": "Number of articles",
                "avg_response_time": "Average response time",
                "success_rate": "Scraping success rate"
            }
        ]
    },
    "task_template": "default",
    "scraper_kwargs": {
        "proxy_config": {
            "type": "datacenter",
            "pool_size": 50,
            "rotation": "round_robin",
            "geo_targeting": ["US", "UK", "EU"]
        },
        "performance_optimization": {
            "concurrent_requests": 10,
            "request_timeout": 15,
            "connection_pooling": true,
            "keep_alive": true,
            "compression": true
        },
        "load_balancing": {
            "strategy": "weighted_round_robin",
            "health_checks": true,
            "failover": true,
            "circuit_breaker": {
                "failure_threshold": 5,
                "recovery_timeout": 60
            }
        },
        "data_processing": {
            "parallel_processing": true,
            "batch_size": 100,
            "duplicate_detection": true,
            "content_deduplication": "fuzzy_matching",
            "language_detection": true
        },
        "caching": {
            "enabled": true,
            "ttl": 300,
            "cache_type": "redis",
            "compression": true
        }
    },
    "quality_assurance": {
        "content_validation": {
            "min_article_length": 100,
            "exclude_duplicates": true,
            "language_filter": ["en"],
            "spam_detection": true
        },
        "source_reliability": {
            "whitelist_domains": true,
            "blacklist_patterns": ["advertisement", "sponsored"],
            "credibility_scoring": true
        }
    },
    "monitoring": {
        "performance_metrics": true,
        "error_tracking": true,
        "success_rate_monitoring": true,
        "latency_tracking": true,
        "alerts": {
            "high_error_rate": 10,
            "slow_response": 30,
            "source_unavailable": true
        }
    }
}
