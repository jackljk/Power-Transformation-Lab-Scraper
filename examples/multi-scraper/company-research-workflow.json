{
    "profile_name": "Company Research Workflow",
    "description": "Comprehensive company research combining web scraping and document analysis for investment research",
    "workflow_type": "multi_scraper",
    "scrapers": [
        {
            "step": 1,
            "scraper_type": "bright_data",
            "target": "company_website",
            "purpose": "Extract basic company information and recent news",
            "config": {
                "target_url": "https://{company_domain}",
                "task_prompt": "Extract company overview, leadership team, recent news, product information, and contact details",
                "output_format": {
                    "company_name": "Legal company name",
                    "description": "Business description",
                    "leadership": ["Executive team members"],
                    "recent_news": ["Recent company announcements"],
                    "products_services": ["Main offerings"],
                    "headquarters": "Company headquarters location"
                }
            }
        },
        {
            "step": 2,
            "scraper_type": "browser_use",
            "target": "yahoo_finance",
            "purpose": "Extract financial data and stock information",
            "config": {
                "target_url": "https://finance.yahoo.com/quote/{ticker}",
                "task_prompt": "Extract current stock price, financial ratios, analyst ratings, and key statistics",
                "depends_on": "step_1.company_name",
                "output_format": {
                    "stock_price": "Current stock price",
                    "market_cap": "Market capitalization",
                    "pe_ratio": "Price to earnings ratio",
                    "analyst_rating": "Average analyst recommendation",
                    "price_targets": "Analyst price targets"
                }
            }
        },
        {
            "step": 3,
            "scraper_type": "pdf",
            "target": "annual_report",
            "purpose": "Analyze latest annual report for detailed financials",
            "config": {
                "target_source": "sec_filing|company_website",
                "task_prompt": "Extract detailed financial information, business segments, and risk factors from annual report",
                "depends_on": "step_1.company_name",
                "output_format": {
                    "financial_summary": "Key financial metrics",
                    "business_segments": "Revenue by segment",
                    "risk_factors": "Major business risks",
                    "competitive_position": "Market position analysis"
                }
            }
        },
        {
            "step": 4,
            "scraper_type": "bright_data",
            "target": "news_sentiment",
            "purpose": "Analyze recent news sentiment and media coverage",
            "config": {
                "target_url": "https://www.google.com/search?q={company_name}+news",
                "task_prompt": "Extract recent news articles and analyze sentiment around the company",
                "depends_on": "step_1.company_name",
                "output_format": {
                    "recent_articles": [
                        {
                            "title": "Article title",
                            "source": "News source",
                            "sentiment": "positive|negative|neutral",
                            "summary": "Article summary"
                        }
                    ],
                    "overall_sentiment": "Overall media sentiment",
                    "key_topics": ["Main topics in coverage"]
                }
            }
        }
    ],
    "data_consolidation": {
        "combine_outputs": true,
        "cross_reference": [
            {
                "primary": "step_2.financial_data",
                "secondary": "step_3.financial_summary",
                "validation": "financial_consistency_check"
            }
        ],
        "final_output": {
            "company_profile": "Consolidated company information",
            "financial_analysis": "Complete financial picture",
            "investment_summary": "Investment thesis and key points",
            "risk_assessment": "Comprehensive risk evaluation",
            "recommendation": "Investment recommendation with rationale"
        }
    },
    "execution_config": {
        "parallel_execution": false,
        "error_handling": "continue_on_failure",
        "timeout_per_step": 300,
        "save_intermediate": true
    }
}
