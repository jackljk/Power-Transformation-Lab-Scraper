{
    "profile_name": "BBC News Article Extractor",
    "description": "Extracts comprehensive news article information from BBC News including content, metadata, and related articles",
    "scraper_type": "bright_data",
    "target_url": "https://www.bbc.com/news/*",
    "task_prompt": "Extract the full news article content, headline, publication date, author information, article category, key topics, and any related articles or multimedia content. Preserve the article structure and formatting.",
    "output_format": {
        "headline": "Main article headline",
        "subheadline": "Article subheadline if present",
        "author": "Article author name(s)",
        "publication_date": "Publication date and time",
        "last_updated": "Last update timestamp if available",
        "category": "News category (World, UK, Business, etc.)",
        "tags": ["Article tags or topics"],
        "summary": "Article summary or lead paragraph",
        "full_content": "Complete article text content",
        "images": [
            {
                "url": "Image URL",
                "caption": "Image caption",
                "credit": "Photo credit"
            }
        ],
        "videos": [
            {
                "title": "Video title",
                "url": "Video URL or embed code",
                "duration": "Video duration"
            }
        ],
        "related_articles": [
            {
                "title": "Related article title",
                "url": "Related article URL",
                "summary": "Brief summary"
            }
        ],
        "location": "Article location/dateline",
        "reading_time": "Estimated reading time"
    },
    "task_template": "default",
    "scraper_kwargs": {
        "proxy_type": "residential",
        "country": "GB",
        "session_persistence": true,
        "javascript_rendering": false,
        "follow_redirects": true,
        "timeout": 20,
        "user_agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
    },
    "retry_config": {
        "max_retries": 3,
        "retry_delay": 2,
        "backoff_multiplier": 2
    },
    "output_options": {
        "save_screenshots": false,
        "save_html": true,
        "include_metadata": true,
        "timestamp": true,
        "format": "structured_json"
    }
}
