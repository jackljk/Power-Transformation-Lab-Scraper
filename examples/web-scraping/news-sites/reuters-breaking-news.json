{
    "profile_name": "Reuters Breaking News Monitor",
    "description": "Monitors Reuters for breaking news updates with real-time content extraction and change detection",
    "scraper_type": "bright_data",
    "target_url": "https://www.reuters.com/world/",
    "task_prompt": "Extract breaking news headlines, story summaries, publication times, and priority levels. Focus on identifying new stories and updates to existing stories. Track story development over time.",
    "output_format": {
        "breaking_news": [
            {
                "headline": "Breaking news headline",
                "summary": "Brief story summary",
                "publication_time": "When story was published",
                "last_update": "Last update time",
                "priority": "Story priority (Breaking, Urgent, Standard)",
                "category": "News category",
                "location": "Story location",
                "url": "Full article URL",
                "is_updated": "Whether story has been updated",
                "update_count": "Number of updates"
            }
        ],
        "trending_topics": ["Currently trending news topics"],
        "featured_stories": [
            {
                "title": "Featured story title",
                "type": "Story type (analysis, investigation, etc.)",
                "url": "Story URL"
            }
        ],
        "market_impact": [
            {
                "headline": "Market-related news",
                "impact_level": "Potential market impact assessment"
            }
        ]
    },
    "task_template": "default",
    "scraper_kwargs": {
        "proxy_type": "datacenter",
        "rotation_frequency": "per_request",
        "javascript_rendering": true,
        "wait_for_elements": [".story-card", ".breaking-news"],
        "timeout": 15,
        "concurrent_requests": 3
    },
    "monitoring": {
        "enabled": true,
        "check_interval": 300,
        "change_detection": true,
        "alert_on_breaking": true
    }
}
