{
    "profile_name": "Twitter Trend Monitor",
    "description": "Monitors Twitter/X for trending topics, hashtags, and public sentiment analysis on specific topics",
    "scraper_type": "bright_data",
    "target_url": "https://twitter.com/search?q={search_term}&src=trend_click",
    "task_prompt": "Extract trending topics, popular tweets, hashtag performance, and sentiment analysis for specific search terms. Focus on public tweets and aggregate data.",
    "output_format": {
        "search_metadata": {
            "search_term": "Original search query",
            "search_timestamp": "When search was performed",
            "total_results": "Approximate number of results",
            "trending_status": "Whether term is currently trending"
        },
        "trending_data": {
            "current_trends": [
                {
                    "hashtag": "Trending hashtag",
                    "volume": "Tweet volume/mentions",
                    "trend_direction": "rising|falling|stable",
                    "related_terms": ["Related trending terms"]
                }
            ],
            "top_tweets": [
                {
                    "tweet_id": "Tweet identifier",
                    "author": "Tweet author handle",
                    "content": "Tweet text content",
                    "engagement": {
                        "retweets": "Number of retweets",
                        "likes": "Number of likes",
                        "replies": "Number of replies"
                    },
                    "timestamp": "Tweet timestamp",
                    "verified_account": "Whether author is verified"
                }
            ]
        },
        "sentiment_analysis": {
            "overall_sentiment": "positive|negative|neutral",
            "sentiment_distribution": {
                "positive": "Percentage positive",
                "negative": "Percentage negative",
                "neutral": "Percentage neutral"
            },
            "emotional_indicators": ["Key emotional themes"],
            "opinion_leaders": ["Influential accounts discussing topic"]
        },
        "temporal_analysis": {
            "peak_activity_times": ["Times of highest activity"],
            "trend_timeline": "How trend developed over time",
            "geographic_distribution": ["Regions where trend is popular"]
        }
    },
    "task_template": "default",
    "scraper_kwargs": {
        "proxy_type": "residential",
        "geo_targeting": "US",
        "javascript_rendering": true,
        "session_persistence": false,
        "concurrent_requests": 2,
        "timeout": 20,
        "rate_limiting": {
            "requests_per_minute": 30,
            "respect_api_limits": true
        },
        "content_filtering": {
            "public_tweets_only": true,
            "exclude_retweets": false,
            "min_engagement": 5,
            "language_filter": ["en"]
        }
    },
    "data_processing": {
        "sentiment_analysis": {
            "enabled": true,
            "confidence_threshold": 0.7,
            "emotion_detection": true
        },
        "text_processing": {
            "hashtag_extraction": true,
            "mention_extraction": true,
            "url_extraction": false,
            "clean_text": true
        },
        "duplicate_detection": {
            "enabled": true,
            "similarity_threshold": 0.9
        }
    },
    "compliance": {
        "public_data_only": true,
        "respect_privacy": true,
        "anonymize_users": false,
        "rate_limiting": "Conservative approach"
    },
    "monitoring": {
        "real_time": false,
        "scheduled_runs": "*/15 * * * *",
        "trend_alerts": true,
        "sentiment_change_alerts": true
    }
}
