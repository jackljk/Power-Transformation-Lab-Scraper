{
    "profile_name": "Financial Report Analyzer",
    "description": "Extracts key financial information from annual reports, 10-K filings, and financial statements",
    "scraper_type": "pdf",
    "target_source": "local_file|url",
    "task_prompt": "Extract comprehensive financial information including company overview, financial performance, risk factors, management discussion, and key financial metrics. Focus on quantitative data, trends, and forward-looking statements.",
    "output_format": {
        "company_info": {
            "company_name": "Legal company name",
            "ticker_symbol": "Stock ticker",
            "fiscal_year": "Reporting fiscal year",
            "report_type": "10-K|Annual Report|Quarterly Report",
            "filing_date": "SEC filing date",
            "cik_number": "Central Index Key number"
        },
        "executive_summary": {
            "business_overview": "Company business description",
            "key_products_services": ["Main products/services"],
            "geographic_presence": ["Operating regions/countries"],
            "employees": "Number of employees"
        },
        "financial_highlights": {
            "revenue": {
                "current_year": "Current year revenue",
                "previous_year": "Previous year revenue",
                "growth_rate": "Year-over-year growth percentage"
            },
            "profitability": {
                "net_income": "Current year net income",
                "earnings_per_share": "Diluted EPS",
                "profit_margin": "Net profit margin percentage"
            },
            "financial_position": {
                "total_assets": "Total assets value",
                "total_debt": "Total debt obligations",
                "shareholders_equity": "Total shareholders equity",
                "debt_to_equity_ratio": "D/E ratio"
            },
            "cash_flow": {
                "operating_cash_flow": "Cash from operations",
                "free_cash_flow": "Free cash flow",
                "capital_expenditures": "Capital spending"
            }
        },
        "business_segments": [
            {
                "segment_name": "Business segment name",
                "revenue": "Segment revenue",
                "operating_income": "Segment operating income",
                "description": "Segment description"
            }
        ],
        "risk_factors": [
            {
                "risk_category": "Risk type (market, operational, regulatory)",
                "description": "Risk factor description",
                "potential_impact": "Potential impact assessment"
            }
        ],
        "management_discussion": {
            "key_trends": ["Important business trends discussed"],
            "challenges": ["Key challenges mentioned"],
            "strategic_initiatives": ["Major strategic initiatives"],
            "outlook": "Management's forward-looking statements"
        },
        "auditor_opinion": {
            "auditing_firm": "Independent auditor name",
            "opinion_type": "Unqualified|Qualified|Adverse",
            "key_audit_matters": ["Significant audit issues if any"]
        }
    },
    "task_template": "pdf",
    "scraper_kwargs": {
        "pdf_processing": {
            "extract_tables": true,
            "financial_table_focus": true,
            "preserve_numbers": true,
            "chunk_size": 1500,
            "chunk_overlap": 150,
            "section_detection": true
        },
        "financial_processing": {
            "currency_detection": true,
            "number_validation": true,
            "fiscal_period_extraction": true,
            "ratio_calculations": true
        }
    },
    "validation": {
        "required_sections": [
            "financial_highlights",
            "business_segments",
            "risk_factors"
        ],
        "numeric_validation": true,
        "consistency_checks": true
    }
}
