{
    "profile_name": "Research Paper Analyzer",
    "description": "Extracts structured information from academic research papers including abstract, methodology, results, and citations",
    "scraper_type": "pdf",
    "target_source": "local_file|url",
    "task_prompt": "Extract comprehensive research paper information including title, authors, abstract, methodology, key findings, results, discussion, limitations, and full citation list. Identify the research problem, hypothesis, and conclusions. Preserve mathematical equations and statistical data.",
    "output_format": {
        "paper_metadata": {
            "title": "Research paper title",
            "authors": ["Author 1", "Author 2", "Author 3"],
            "institution": "Primary research institution",
            "publication_date": "Publication date",
            "journal": "Journal or conference name",
            "doi": "Digital Object Identifier",
            "keywords": ["keyword1", "keyword2", "keyword3"],
            "page_count": "Total number of pages"
        },
        "content_structure": {
            "abstract": "Paper abstract/summary",
            "introduction": {
                "research_problem": "Main research problem being addressed",
                "background": "Background and context",
                "research_questions": ["Primary research questions"],
                "hypothesis": "Research hypothesis if stated"
            },
            "methodology": {
                "approach": "Research methodology type",
                "participants": "Study participants/sample",
                "data_collection": "Data collection methods",
                "analysis_methods": ["Statistical or analytical methods used"],
                "tools_software": ["Software or tools used"]
            },
            "results": {
                "key_findings": ["Main research findings"],
                "statistical_results": ["Significant statistical results"],
                "tables_figures": [
                    {
                        "type": "table|figure",
                        "title": "Title of table/figure",
                        "description": "Content description",
                        "key_data": "Important data points"
                    }
                ]
            },
            "discussion": {
                "interpretation": "Interpretation of results",
                "implications": "Research implications",
                "limitations": "Study limitations",
                "future_work": "Suggested future research"
            },
            "conclusion": "Main conclusions and contributions"
        },
        "citations": [
            {
                "reference_number": 1,
                "authors": "Citation authors",
                "title": "Citation title",
                "publication": "Publication venue",
                "year": "Publication year",
                "doi_url": "DOI or URL if available"
            }
        ],
        "mathematical_content": [
            {
                "equation_number": "Equation reference",
                "equation_text": "Mathematical equation",
                "context": "Surrounding context"
            }
        ]
    },
    "task_template": "pdf",
    "scraper_kwargs": {
        "pdf_processing": {
            "extract_images": true,
            "extract_tables": true,
            "preserve_layout": true,
            "ocr_fallback": true,
            "chunk_size": 1000,
            "chunk_overlap": 100
        },
        "ai_processing": {
            "model": "gpt-4",
            "temperature": 0.1,
            "max_tokens": 4000,
            "structured_extraction": true
        }
    },
    "output_options": {
        "include_page_numbers": true,
        "preserve_formatting": true,
        "extract_references": true,
        "save_markdown": true
    }
}
